<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- dependency config -->
	<!-- singleton n eager -->
	<bean id="test" class="dependency.TestTransport" />
	<!-- prototype n lazy -->
	<bean id="http" class="dependency.HttpTransport" scope="prototype" lazy-init="false"/>
	<!-- singleton n lazy -->
	<bean id="soap" class="dependency.SoapTransport" scope="prototype"/>
	<!-- dependent bean config -->
	<!--singleton n eager -->
	<bean id="my_atm" class="dependent.ATMImpl" scope="prototype">
		<!-- setter Based D.I -->
		<property name="myTransport" ref="soap" />
	</bean>


</beans>
